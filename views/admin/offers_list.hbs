<div class="ui breadcrumb">
    <a class="section" href="/admin/">Home</a>
    <i class="right angle icon divider"></i>
    <a class="section" href="/admin/offers/list">Offers</a>
    <i class="right angle icon divider"></i>
    <div class="active section">List</div>
</div>
<p></p>

<table class="ui compact celled table stacked segment">
    <thead>
        <tr>
            <th>Name</th>
            <th>Slug</th>
            <th>Shop</th>
            <th>Platform</th>
            <th>Google tracking</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.slug}}</td>
            <td>{{this.shop}}</td>
            <td>{{this.platform}}</td>
            <td>{{this.ga_tracking}}</td>
            <td>
                <div class="ui dropdown">
                    <div class="text">Select</div>
                    <i class="dropdown icon"></i>
                    <div class="menu">
                        <a href="edit/{{this._id}}" class="item"><i class="edit outline icon"></i>Edit</a>
                        <a href="{{this._id}}/pages/" class="item"><i class="copy outline icon"></i>Pages</a>
                        <a href="delete/{{this._id}}" onClick="return confirm('Are you sure to delete this record ?');" class="item"><i class="window close outline icon"></i>Delete</a>
                    </div>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
    <tfoot class="full-width">
    <tr>
        <th colspan="6">
            <a class="ui right floated small primary labeled icon button" href="create">
                <i class="plus icon"></i> Add Offer
            </a>
        </th>
    </tr>
    </tfoot>
</table>

<script>
    $('.ui.dropdown').dropdown();
</script>
